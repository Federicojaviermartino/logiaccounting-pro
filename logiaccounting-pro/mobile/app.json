{
  "expo": {
    "name": "LogiAccounting Pro",
    "slug": "logiaccounting-pro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "logiaccounting",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E40AF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.logiaccounting.pro",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "LogiAccounting Pro uses the camera to scan barcodes and documents",
        "NSPhotoLibraryUsageDescription": "LogiAccounting Pro uses your photo library to import documents",
        "NSFaceIDUsageDescription": "LogiAccounting Pro uses Face ID for secure authentication"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E40AF"
      },
      "package": "com.logiaccounting.pro",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.VIBRATE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-local-authentication",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow LogiAccounting Pro to access your camera for scanning"
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow LogiAccounting Pro to access your camera for barcode scanning"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow LogiAccounting Pro to access your photos for document import"
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#1E40AF"
        }
      ],
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "logiaccounting-pro"
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/logiaccounting-pro"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}
