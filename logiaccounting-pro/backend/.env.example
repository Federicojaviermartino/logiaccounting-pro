# LogiAccounting Pro Backend - Environment Variables
# Copy this file to .env and update values for your environment

# ===========================================
# REQUIRED - Security
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string (optional - uses in-memory store if not set)
# DATABASE_URL=postgresql://user:password@localhost:5432/logiaccounting

# Database pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# ===========================================
# REDIS (for caching and rate limiting)
# ===========================================
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# CORS
# ===========================================
# Comma-separated list of allowed origins (* for all)
CORS_ORIGINS=*

# ===========================================
# API SETTINGS
# ===========================================
API_PREFIX=/api/v1
DEBUG=false

# ===========================================
# OPTIONAL - External Services
# ===========================================
# OpenAI for AI features (OCR, anomaly detection, assistant)
# OPENAI_API_KEY=sk-your-openai-key

# Stripe for payment processing
# STRIPE_SECRET_KEY=sk_test_your-stripe-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Plaid for bank connections
# PLAID_CLIENT_ID=your-plaid-client-id
# PLAID_SECRET=your-plaid-secret
# PLAID_ENV=sandbox

# Email service (SMTP)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM=noreply@logiaccounting.demo

# ===========================================
# RUNTIME VERSIONS (for deployment platforms)
# ===========================================
PYTHON_VERSION=3.11
NODE_VERSION=20
